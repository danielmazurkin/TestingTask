[flake8]
exclude = .git,__pycache__,poc_scripts,migrations, manage.py,node_modules
ignore = \
    A002, \
    W503, \             # Разрыв строки после бинарного оператора
    D100, \             # Докстринги в публичных модулях
    D104, \             # Докстринги в публичных пакетах (__init__.py)
    D105, \             # Докстринги в магических методах
    D106, \             # Докстринги в публичных вложенных классах (например, Meta)
    D107, \             # Докстриги в __init__
    I202, \             # Группы импортов уровня приложения
    F405, \             # Неявные импорты (в сеттингах)
    D205, \             # Нормальые многострочные докстринги
    D401, \             # Нормальые многострочные докстринги
    D400  \

import-order-style = pep8
max-line-length = 120

